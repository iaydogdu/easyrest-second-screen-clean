{
  "name": "easyrest-second-screen-clean",
  "version": "0.2.6",
  "description": "Electron tabanlı ikinci ekran - otomatik güncelleme sistemi ile",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "debug": "electron . --debug",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish=always"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.easyrest.secondscreen.clean",
    "productName": "easyRest Second Screen",
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "iaydogdu",
      "repo": "easyrest-second-screen-clean"
    }
  }
}
